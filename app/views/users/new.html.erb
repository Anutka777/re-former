<h1>Registration</h1>

<div class="validation-errors">
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |error| %>
      <p style="color:red;">
        <%= error %>
      </p>
    <% end %>
  <% end %>
</div>

