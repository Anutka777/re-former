<%= form_with model: @user do |f| %>
  <%= f.label :username, 'Username' %>
  <%= f.text_field :username, value: 'Roman'%>
  <br>
  <br>
  <%= f.label :email, 'E-mail' %>
  <%= f.email_field :email, placeholder: 'example@email.com' %>
  <br>
  <br>
  <%= f.label :password, 'Password' %>
  <%= f.password_field :password, value: '1234' %>
  <br>
  <br>
  <%= f.submit %>
<% end %>